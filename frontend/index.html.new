        async function fillGroups(days) {
            if (!confirm(`–ó–∞–ø—É—Å—Ç–∏—Ç—å –Ω–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –≥—Ä—É–ø–ø –∑–∞ ${days} –¥–Ω–µ–π?\n–≠—Ç–æ –º–æ–∂–µ—Ç –∑–∞–Ω—è—Ç—å 5-20 –º–∏–Ω—É—Ç.`)) {
                return;
            }

            try {
                showAlert(`üîÑ –ó–∞–ø—É—â–µ–Ω–æ –Ω–∞–ø–æ–ª–Ω–µ–Ω–∏–µ –∑–∞ ${days} –¥–Ω–µ–π... –≠—Ç–æ –∑–∞–π–º—ë—Ç –≤—Ä–µ–º—è, —Å–ª–µ–¥–∏ –∑–∞ –ª–æ–≥–∞–º–∏ –ø–∞—Ä—Å–µ—Ä–∞.`, 'success');
                
                const res = await fetch(`${API_URL}/fill-groups`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({days})
                });
                
                const data = await res.json();
                showAlert(`‚úÖ ${data.message}. –ü—Ä–æ–≤–µ—Ä—å –ª–æ–≥–∏ –ø–∞—Ä—Å–µ—Ä–∞: tail -f logs/parser.log`, 'success');
                
                // –û–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∞—Ç–∏—Å—Ç–∏–∫—É –∫–∞–∂–¥—ã–µ 5 —Å–µ–∫
                const interval = setInterval(() => {
                    loadStats();
                }, 5000);
                
                // –û—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —á–µ—Ä–µ–∑ 10 –º–∏–Ω—É—Ç
                setTimeout(() => clearInterval(interval), 600000);
                
            } catch (e) {
                showAlert('–û—à–∏–±–∫–∞: ' + e.message, 'error');
            }
        }
